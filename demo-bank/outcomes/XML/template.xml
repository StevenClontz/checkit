<?xml version='1.0' encoding='UTF-8'?>
<knowl mode="exercise" xmlns="https://spatext.clontz.org" version="0.2">
    <intro>
        <p>
Determine if each of the following piecewise functions is continuous.
        </p>
    </intro>
    <!-- {{#functions}} -->
    <knowl>
        <content>
            <p>
                <m style="display">
{{f}}(x) =
\begin{cases}
{{left}} &amp; x \leq 0 \\
{{right}} &amp; x &gt; 0 \\
\end{cases}
                </m>
            </p>
        </content>
        <outtro>
            <p>
                <!-- {{#continuous}} -->
                Yes
                <!-- {{/continuous}} -->
                <!-- {{^continuous}} -->
                No
                <!-- {{/continuous}} -->
            </p>
        </outtro>
    </knowl>
    <!-- {{/functions}} -->
</knowl>
