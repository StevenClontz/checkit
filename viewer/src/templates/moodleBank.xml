<?xml version="1.0" encoding="UTF-8"?>
<quiz>
  <question type="category">
    <!-- folder for storing the questions-->
    <category>
      <text>$course$/top/checkit/{{bankSlug}}/{{id}}</text>
    </category>
    <info> <!-- Name for the category-->
      <text>CheckIt {{bankSlug}} (Build {{id}}) | {{bank}}</text>
    </info>
  </question>

  <!-- {{#outcomes}} -->
      <question type="category">
        <!-- folder for storing the questions-->
        <category>
          <text>$course$/top/checkit/{{bankSlug}}/{{id}}/{{slug}}</text>
        </category>
        <info> <!-- Name for the category-->
          <text>CheckIt {{bankSlug}} {{slug}} (Build {{id}}) | {{bank}}: {{title}}</text>
        </info>
      </question>

      <!-- {{#exercises}} -->
      <question type="essay">
        <name> <!-- Name for the question -->
          <text>{{slug}} ver. {{seed}}</text>
        </name>
        <questiontext format="html"> <!-- question text-->
          <text>{{question}}</text>
        </questiontext>
        <generalfeedback format="html"> <!-- solution text-->
          <text>{{answer}}</text>
        </generalfeedback>
        <defaultgrade>1.0000000</defaultgrade>
        <penalty>0.3333333</penalty>
        <hidden>0</hidden>
        <idnumber></idnumber>
        <responseformat>editor</responseformat>
        <responserequired>1</responserequired>
        <responsefieldlines>20</responsefieldlines>
        <minwordlimit></minwordlimit>
        <maxwordlimit></maxwordlimit>
        <attachments>1</attachments>
        <attachmentsrequired>0</attachmentsrequired>
        <maxbytes>0</maxbytes>
        <filetypeslist></filetypeslist>
        <graderinfo format="html">
          <text></text>
        </graderinfo>
        <responsetemplate format="html">
          <text></text>
        </responsetemplate>
      </question>
      <!-- {{/exercises}} -->
  <!-- {{/outcomes}} -->
</quiz>